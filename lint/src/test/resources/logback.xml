<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) [%file:%line] - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="stdout" />
    </root>

    <logger name="mybatis" level="DEBUG" />
    <logger name="misc" level="DEBUG" />
    <logger name="sql" level="DEBUG" />
</configuration>